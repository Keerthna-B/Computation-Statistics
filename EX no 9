import matplotlib.pyplot as plt

# Prepare the data
product = ['computer', 'monitor', 'printer', 'laptop', 'tablet']
quantity = [320, 450, 300, 120, 280]

# Select the attributes for constructing the Horizontal Bar chart
x = product
y = quantity

# Plot the Horizontal Bar chart
plt.barh(x, y)

# Set the title and labels
plt.title("H-Plot of Product Quantity")
plt.xlabel("Quantity")
plt.ylabel("Product")

# Show the plot
plt.show()
